        <!-- 1.1. เพิ่ม tag <div> ด้วยชื่อ class "header" -->
    <div class="header">
        <header>
        </header>
    </div>
        <!-- 1.2. เพิ่ม tag <div> ด้วยชื่อ class "main" -->

    <div class="main">
           <main>
        </main>
    </div>

    <div class="footer">
        <footer>
        </footer>
    </div>

