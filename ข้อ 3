body {
    font-family: "Avenir Next";
}

/* 2.1. กำหนด background-color ของ header เป็น #f7f2b4, และ height เป็น 90px */
.header {
    background-color: #f7f2b4;
    height: 90px;
}

/* 2.2. กำหนด background-color ของ main เป็น #bdf7f1,  และ height เป็น 600px */
.main {
    background-color: #bdf7f1;
    height: 600px;

}

/* 2.3. กำหนด background-color ของ footer เป็น #ceccf3,  และ height เป็น 270px */
.footer {
    background-color: #ceccf3;
    height: 270px;
}
